{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "builds": [
      { "src": "backend/api/index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/api/index.js" },
      { "src": "/(.*)", "dest": "/frontend/dist/$1" }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }